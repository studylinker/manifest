  name: studylinker-main
  namespace: webservice
  annotations:
    kubernetes.io/ingress.class: alb
    alb.ingress.kubernetes.io/group.name: studylinker
    alb.ingress.kubernetes.io/group.order: "6"

    # === ALB ì „ì²´ì— ì ìš©ë˜ëŠ” ì˜µì…˜ë“¤ ===
